<?xml version="1.0" encoding="UTF-8"?>
<tns:bodefcfg xmlns:tns="http://www.jee-soft.cn/x5-bo-def"
              xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
              xsi:schemaLocation="http://www.jee-soft.cn/x5-bo-def ../xsd/x5-bo-def.xsd ">
    <!-- bodef的名称 -->
    <tns:name>costrefund</tns:name>
    <!-- bodef的包路径 -->
    <tns:cagetory>com.ksoft.business.fm.costrefund.entity</tns:cagetory>
    <!-- bodef处理数据的格式 -->
    <tns:datatype>json</tns:datatype>
    <tns:savetype>table</tns:savetype>

    <!-- 服务调用的配置 -->
    <tns:services>
        <tns:webservice name="saveCostrefundAndList" group="fm"
                        default="true" description="保存费用报销信息"/>
    </tns:services>

    <!-- 公用属性规则 -->
    <tns:rules>
        <tns:rule key="accountRule" type="format" tipinfo="只能是字母、数字和下划线(以字母开头)"
                  content="^[a-z|A-Z][a-z|A-Z|0-9|_]+$"/>
        <tns:rule key="emailRule" type="format" tipinfo="电子邮箱地址格式不正确"
                  content="\w+([-+.]\w+)*@\w+([-.]\w+)*\.\w+([-.]\w+)*"/>
        <tns:rule key="urlRule" type="format" tipinfo="url地址格式不正确"
                  content="[a-zA-z]+://[^\s]*"/>
        <tns:rule key="exceptUrlRule" tipinfo="不能是http://www.jee-soft.cn这个地址"
                  type="exclusion" content="http://www.jee-soft.cn"/>
    </tns:rules>

    <!-- 主model(有且仅有一个) -->
    <tns:mainmodel name="costrefundSave" description="费用报销">
        <tns:attribute name="sn" type="string" description="sn"/>
        <tns:attribute name="billno" type="string" description="费用报销单号"/>
        <tns:attribute name="applyman" type="string" description="申请人"/>
        <tns:attribute name="deptsn" type="string" description="部门"></tns:attribute>
        <tns:attribute name="applydate" type="string" description="申请日期"></tns:attribute>
        <tns:attribute name="lendcost" type="string" description="借款金额"/>
        <tns:attribute name="applycost" type="string" description="申请报销金额"/>
        <tns:attribute name="finallycost" type="string" description="实际报销金额"/>
        <tns:attribute name="relendcost" type="string" description=""/>
        <tns:attribute name="isgrant" type="string" description="申请人"/>
        <tns:attribute name="attachment" type="string" description="附件sn"/>
        <tns:attribute name="remark" type="string" description="备注"/>
        <tns:hasMany name="costrefundDSave" rel="costrefundDSave"/>
    </tns:mainmodel>

    <!-- marydetail的定义 -->
    <tns:submodel name="costrefundDSave" description="费用报销详细信息">
        <tns:attribute name="sn" type="string" description="sn"/>
        <tns:attribute name="costproject" type="string" description="费用项目"/>
        <tns:attribute name="cost" type="string" description="报销金额"/>
        <tns:attribute name="costman" type="string" description="实际报销人"></tns:attribute>
        <tns:attribute name="disabled" type="int" description="是否可用"></tns:attribute>
        <tns:attribute name="createby" type="string" description="创建人"/>
        <tns:attribute name="createdate" type="string" description="创建时间"/>
        <tns:attribute name="updateby" type="string" description="更新人"/>
        <tns:attribute name="updatedate" type="string" description="更新时间"/>
        <tns:attribute name="remark" type="string" description="备注"/>
    </tns:submodel>
</tns:bodefcfg>
